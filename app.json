{
    "id": "com.somfy.tahoma",
    "name": {
        "en": "Somfy TaHoma",
        "nl": "Somfy TaHoma"
    },
    "description": {
        "en": "Somfy TaHoma for Homey",
        "nl": "Somfy TaHoma voor Homey"
    },
    "version": "0.0.1",
    "compatibility": "1.x",
    "author": {
        "name": "Total Immersion"
    },
    "images": {
        "small": "assets/images/small.png",
        "large": "assets/images/large.png"
    },
    "category": [
        "appliances"
    ],
    "drivers": [
        {
            "id": "io_vertical_exterior_blind",
            "name": {
                "en": "Exterior vertical blind (io)",
                "nl": "Verticale buitenzonwering (io)"
            },
            "images": {
                "large": "/drivers/io_vertical_exterior_blind/assets/images/large.png",
                "small": "/drivers/io_vertical_exterior_blind/assets/images/small.png"
            },
            "class": "windowcoverings",
            "capabilities": [
                "windowcoverings_state"
            ],
            "pair": [
                {
                    "id": "list_my_devices",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_my_devices"
                    }
                },
                {
                    "id": "add_my_devices",
                    "template": "add_devices"
                }
            ]
        },
        {
            "id": "io_light_sensor",
            "name": {
                "en": "Sunis sun sensor io",
                "nl": "Sunis zonsensor io"
            },
            "images": {
                "large": "/drivers/io_vertical_exterior_blind/assets/images/large.png",
                "small": "/drivers/io_vertical_exterior_blind/assets/images/small.png"
            },
            "class": "sensor",
            "capabilities": [
                "measure_luminance",
                "measure_battery"
            ],
            "pair": [
                {
                    "id": "list_my_devices",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_my_devices"
                    }
                },
                {
                    "id": "add_my_devices",
                    "template": "add_devices"
                }
            ]
        }
    ],
    "flow": {
        "actions": [
            {
                "id": "activate_scenario",
                "title": {
                    "en": "Play scenario",
                    "nl": "Scenario afspelen"
                },
                "args": [
                    {
                        "name": "scenario",
                        "type": "autocomplete"
                    }
                ]
                
            }
        ]
    }
}