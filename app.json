{
    "id": "com.somfy.tahoma",
    "name": {
        "en": "Somfy TaHoma",
        "nl": "Somfy TaHoma"
    },
    "description": {
        "en": "Somfy TaHoma for Homey",
        "nl": "Somfy TaHoma voor Homey"
    },
    "version": "0.0.1",
    "compatibility": "1.x",
    "author": {
        "name": "Total Immersion"
    },
    "images": {
        "small": "assets/images/small.png",
        "large": "assets/images/large.png"
    },
    "category": [
        "appliances"
    ],
    "drivers": [
        {
            "id": "io_vertical_exterior_blind",
            "name": {
                "en": "Exterior vertical blind (io)",
                "nl": "Verticale buitenzonwering (io)"
            },
            "images": {
                "large": "/drivers/io_vertical_exterior_blind/assets/images/large.png",
                "small": "/drivers/io_vertical_exterior_blind/assets/images/small.png"
            },
            "class": "windowcoverings",
            "capabilities": [
                "windowcoverings_state"
            ],
            "pair": [
                {
                    "id": "list_my_devices",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_my_devices"
                    }
                },
                {
                    "id": "add_my_devices",
                    "template": "add_devices"
                }
            ]
        },
        {
            "id": "io_light_sensor",
            "name": {
                "en": "Sunis sun sensor io",
                "nl": "Sunis zonsensor io"
            },
            "images": {
                "large": "/drivers/io_light_sensor/assets/images/large.png",
                "small": "/drivers/io_light_sensor/assets/images/small.png"
            },
            "class": "sensor",
            "capabilities": [
                "measure_luminance"
            ],
            "pair": [
                {
                    "id": "list_my_devices",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_my_devices"
                    }
                },
                {
                    "id": "add_my_devices",
                    "template": "add_devices"
                }
            ]
        }
    ],
    "flow": {
        "triggers": [
            {
                "id": "change_luminance_more_than",
                "title": {
                    "en": "The luminance is more than",
                    "nl": "De lichtsterkte is meer dan"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=io_light_sensor"
                    },
                    {
                        "name": "luminance",
                        "type": "number",
                        "placeholder": {
                            "en": "in Lux",
                            "nl": "in Lux"
                        }
                    }
                ]
            },
            {
                "id": "change_luminance_less_than",
                "title": {
                    "en": "The luminance is less than",
                    "nl": "De lichtsterkte is minder dan"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=io_light_sensor"
                    },
                    {
                        "name": "luminance",
                        "type": "number",
                        "placeholder": {
                            "en": "in Lux",
                            "nl": "in Lux"
                        }
                    }
                ]
            },
                        {
                "id": "change_luminance_between",
                "title": {
                    "en": "The luminance is between",
                    "nl": "De lichtsterkte is tussen"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=io_light_sensor"
                    },
                    {
                        "name": "luminance_from",
                        "type": "number",
                        "placeholder": {
                            "en": "in Lux",
                            "nl": "in Lux"
                        }
                    },
                                        {
                        "name": "luminance_to",
                        "type": "number",
                        "placeholder": {
                            "en": "in Lux",
                            "nl": "in Lux"
                        }
                    }
                ]
            }
        ],
        "conditions": [
            {
                "id": "has_luminance_more_than",
                "title": {
                    "en": "The luminance !{{is|isn't}} more than",
                    "nl": "De lichtsterkte !{{is|is niet}} meer dan"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=io_light_sensor"
                    },
                    {
                        "name": "luminance",
                        "type": "number",
                        "placeholder": {
                            "en": "in Lux",
                            "nl": "in Lux"
                        }
                    }
                ]
            },
            {
                "id": "has_luminance_less_than",
                "title": {
                    "en": "The luminance !{{is|isn't}} less than",
                    "nl": "De lichtsterkte !{{is|is niet}} minder dan"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=io_light_sensor"
                    },
                    {
                        "name": "luminance",
                        "type": "number",
                        "placeholder": {
                            "en": "in Lux",
                            "nl": "in Lux"
                        }
                    }
                ]
            },
            {
                "id": "has_luminance_between",
                "title": {
                    "en": "The luminance !{{is|isn't}} between",
                    "nl": "De lichtsterkte !{{is|is niet}} tussen"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=io_light_sensor"
                    },
                    {
                        "name": "luminance_from",
                        "type": "number",
                        "placeholder": {
                            "en": "in Lux",
                            "nl": "in Lux"
                        }
                    },
                                        {
                        "name": "luminance_to",
                        "type": "number",
                        "min": 50,
                        "max": 100000,
                        "placeholder": {
                            "en": "in Lux",
                            "nl": "in Lux"
                        }
                    }
                ]
            }
        ],
        "actions": [
            {
                "id": "activate_scenario",
                "title": {
                    "en": "Play scenario",
                    "nl": "Scenario afspelen"
                },
                "args": [
                    {
                        "name": "scenario",
                        "type": "autocomplete"
                    }
                ]
                
            }
        ]
    }
}